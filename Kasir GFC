#include <iostream>
using namespace std;

main (){
	
	string Kode[]={"D", "P", "S"}, 
		Potong[]={"Dada", "Paha", "Sayap"},
		jn;
	int Harga[]={2500, 2000, 1500},
		p[3],
		i,qj, j, Total;
		
	cout << "\t GEROBAK FRIED CHICHKEN" << endl <<
	"----------------------------------------" << endl <<
	"\tKode \tJenis \tHarga" << endl <<
	"----------------------------------------" << endl;
	
	for (i=0; i<3; i++){
		cout << "\t" << Kode[i] << " \t" << Potong[i] << "\t" << Harga [i];
		cout << endl;
	}
	
	cout << "\n\tBanyak Jenis = "; cin >> qj;
	for (i=0; i<qj; i++){
		cout << "\n\tJenis Potong Ke - " << i+1 << " [D/P/S] = "; cin >>jn;
		cout << "\tBanyak Potong Ke - " << i+1 << " = " ; cin >> p[i];
	}
//	jn = atoi(jn);
	
	cout << "\n\t\t\t GEROBAK FRIED CHICKEN" << endl <<
	"------------------------------------------------------------------------" << endl <<
	"\tNo. \tJenis   \t Harga   \tBanyak   \tJumlah" << endl <<
	"\t \tPotong   \tSatuan   \t Beli \t\t Harga" << endl <<
	"------------------------------------------------------------------------" << endl ;
		
		if (jn == "D" || jn == "d") {
    		j = 0;
		} else if (jn == "P" || jn == "p") {
		    j = 1;
		} else if (jn == "S" || jn == "s") {
		    j = 2;
		} else {
		    cout << "Error";
		}
		
	for (i = 0; i < qj; i++) {
		Total = 0;
		
        cout << "\t" << i + 1 << ". \t" << Potong[j] << "\t\t Rp. " << Harga[i] << "\t   " << p[i] << "\t       Rp. ";
		
		Total =+ Harga[i] * p[i];
		
		cout << Total << endl;
    }
	
	cout << "\n------------------------------------------------------------------------" << endl ;
	cout << "\t\t\t\t\t Jumlah Bayar \t Rp. " ;
	
return 0;	
}
